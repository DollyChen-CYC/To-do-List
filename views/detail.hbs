<form action="/todos/{{ todo._id }}?_method=DELETE" method="POST" class="form-control mt-4 p-3">
  <div class="row justify-content-between align-items-center">
    <div class="col-auto">
      <input type="checkbox" class="form-check-input me-2" name="isDone" {{#if todo.isDone}} checked {{/if}} disabled>
      <h4 style="display:inline;">{{ todo.name }}</h4>
    </div>
    <div class="col-auto">
      <a href="/todos/{{ todo._id }}/edit" class="btn btn-info text-light">Edit</a>
      <a href="/" class="btn btn-primary text-light">Home</a>
      <button type="submit" class="btn btn-danger">Delete</button>
    </div>
  </div>
</form>