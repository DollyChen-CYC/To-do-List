<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center my-3">Login</h1>
      {{> message }}
      <form action="/users/login" method="POST" class="d-grid gap-3 px-2">
        <div class="form-group ">
          <label class="my-1" for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="form-group ">
          <label class="my-1" for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <div class="d-grid">
          <button type="submit" class="btn btn-primary my-3">Login</button>
        </div>
      </form>
      <p class="lead mb-4 px-2">
        No Account? <a href="/users/register" class="ms-1">Register</a>
      </p>
    </div>
  </div>
</div>